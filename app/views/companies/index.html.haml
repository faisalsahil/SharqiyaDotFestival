.x_panel
  .x_title
    .row
      .col-md-6
        %h2 Companies
      .col-md-6
        = link_to 'New Company', new_company_path, class: 'btn btn-primary pull-right'
    .clearfix
  .x_content
    %table.table.table-striped.table-hover.listing_table
      %thead
        %tr
          %th Company name
          %th Is seen
          %th Is active
          %th Actions
      %tbody
        - @companies&.each do |company|
          %tr
            %td= company.company_name
            %td= company.is_seen
            %td= company.is_active
            %td
              = link_to 'Show', company
              |
              = link_to 'Edit', edit_company_path(company)
              |
              - if company.is_active?
                = link_to 'Delete', company, method: :delete, data: { confirm: 'Are you sure?' }
              - else
                = link_to 'Undo', company, method: :delete, data: { confirm: 'Are you sure?' }